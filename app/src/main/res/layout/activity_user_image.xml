<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".UserImageActivity">

    <LinearLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- bg orange -->
        <LinearLayout
            android:id="@+id/bg_orange"
            android:layout_width="425dp"
            android:layout_height="155dp"
            android:background="@color/colorOrange"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/logo_white_mini" />
        </LinearLayout>

        <!-- Registration -->
        <TextView
            android:id="@+id/registration_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top"
            android:text="@string/changeimageuser"
            android:textAppearance="@style/registration" />



        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/bookimage"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"

            />
        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:src="@drawable/imagechoose"
            android:onClick="Choose"
            android:textColor="@color/colorWhite" />
        <Button
            android:id="@+id/Change"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectanglelogin"
            android:text="Change"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</ScrollView>