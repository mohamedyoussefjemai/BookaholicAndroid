<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- bg orange -->
            <LinearLayout
                android:id="@+id/bg_orange"
                android:layout_width="425dp"
                android:layout_height="230dp"
                android:background="@color/colorOrange"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btn_image"
                    android:layout_width="150dp"
                    android:layout_height="181dp"
                    android:layout_gravity="center"
                    android:background="@color/colorOrange" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_text"
                        android:layout_width="377dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20px"
                        android:gravity="center_horizontal|top"
                        android:text="Flen Foulena"
                        android:textAppearance="@style/name" />

                    <ImageButton
                        android:id="@+id/btn_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorOrange"
                        android:clickable="true"
                        android:src="@drawable/iconedit" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/icon_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="4"
                        android:textColor="@color/colorBlack"
                        android:textSize="36dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/icon_trade_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Trade"
                        android:textAppearance="@style/title" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/icon_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="4"
                        android:textColor="@color/colorBlack"
                        android:textSize="36dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/icon_sale_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Sale"
                        android:textAppearance="@style/title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/icon_message"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="4"
                        android:background="@drawable/message"
                        android:textColor="@color/colorBlack"
                        android:textSize="36dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/icon_message_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Messages"
                        android:textAppearance="@style/title" />
                </LinearLayout>


            </LinearLayout>



            <TextView
                android:id="@+id/Account_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.5dp"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:text="Account"
                android:textAppearance="@style/titleAccount" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20.5dp"
                    android:layout_marginEnd="39.5dp"
                    android:background="@drawable/rectangle"
                    android:hint="Tap to change mail address"
                    android:inputType="textEmailAddress"
                    android:shadowRadius="10" />

                <ImageButton
                    android:id="@+id/btn_email"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:paddingRight="40px"
                    android:background="@color/colorWhite"
                    android:src="@drawable/iconedit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tel"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20.5dp"
                    android:layout_marginEnd="39.5dp"
                    android:background="@drawable/rectangle"
                    android:hint="Tap to change phone number"
                    android:inputType="textEmailAddress"
                    android:shadowRadius="10" />

                <ImageButton
                    android:id="@+id/btn_phone"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:paddingRight="40px"
                    android:background="@color/colorWhite"

                    android:src="@drawable/iconedit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/adresse"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20.5dp"
                    android:layout_marginEnd="39.5dp"
                    android:background="@drawable/rectangle"
                    android:hint="Tap to change your adress"
                    android:inputType="textEmailAddress"
                    android:shadowRadius="10" />

                <ImageButton
                    android:id="@+id/btn_addr"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:paddingRight="40px"
                    android:background="@color/colorWhite"
                    android:src="@drawable/iconedit" />

            </LinearLayout>


            <Button
                android:id="@+id/updateall"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rectanglelogin"
                android:elevation="20dp"
                android:text="Update all"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.5dp"
                android:clickable="true"
                android:drawableStart="@drawable/iconlock"
                android:drawablePadding="10dp"
                android:gravity="top"
                android:paddingStart="10dp"
                android:text="Change password"
                android:textAppearance="@style/titleAccount" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.5dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:drawableStart="@drawable/iconlogout"
                android:gravity="top"
                android:text="Logout"
                android:textAppearance="@style/titleAccount" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>